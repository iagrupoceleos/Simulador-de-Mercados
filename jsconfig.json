{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@engine/*": [
                "src/engine/*"
            ],
            "@ui/*": [
                "src/ui/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@data/*": [
                "src/data/*"
            ]
        },
        "checkJs": true,
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "strict": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}